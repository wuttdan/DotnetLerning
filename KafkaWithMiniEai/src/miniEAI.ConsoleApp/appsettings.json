{
  "ConnectionStrings": {
    "PrimaryDbConnectionString": "Server=localhost\\SQLEXPRESS;Database=fbbeaitst;Trusted_Connection=True;MultipleActiveResultSets=true;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Enrichers.Thread", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        //"Microsoft": "Warning",
        //"Microsoft.EntityFrameworkCore.Database.Command": "Warning"
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\LogApp\\minieai\\logfile-.log",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 2097152,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 2000,
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}